<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library"
             xmlns:viewModel="clr-namespace:Library.MVVM.ViewModel"
             xmlns:view="clr-namespace:Library.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- MergedDictionaries allows multiple ResourceDictionaries to be merged into one -->
            <ResourceDictionary.MergedDictionaries>

                <!-- MenuButtonTheme.xaml is a custom theme for the application's menu buttons-->
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>

                <!-- TextBoxTheme.xaml is a custom theme for the application's text boxes-->
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplate is used to define how to display a ViewModel in the View-->
            <!-- Here, the HomeViewModel's DataTemplate is set to display the HomeView-->
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
